<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HTML Drag-and-Drop Editor</title>
  <style>
    body { display: flex; margin: 0; font-family: Arial, sans-serif; }
    #codeEditor, #preview { flex: 1; height: 100vh; padding: 10px; box-sizing: border-box; }
    #codeEditor { background: #f7f7f7; border-right: 1px solid #ddd; }
    #preview { background: #fff; }
    button { margin: 5px; padding: 8px 12px; }
    .toolbar { padding: 5px; border-bottom: 1px solid #ddd; background: #f1f1f1; }
  </style>
</head>
<body>
  <div id="codeEditor">
    <div class="toolbar">
      <button onclick="addButton()">Add Button</button>
      <button onclick="clearCode()">Clear Code</button>
    </div>
    <textarea id="code" style="width: 100%; height: calc(100% - 50px);"></textarea>
  </div>
  <div id="preview" contenteditable="true"></div>

  <script>
    const codeArea = document.getElementById("code");
    const preview = document.getElementById("preview");

    // Update the live preview when code is edited
    codeArea.addEventListener("input", () => {
      preview.innerHTML = codeArea.value;
    });

    // Add a button to the code and preview
    function addButton() {
      const buttonHTML = `<button>Click Me</button>`;
      codeArea.value += buttonHTML;
      preview.innerHTML = codeArea.value;
    }

    // Clear the code editor and preview
    function clearCode() {
      codeArea.value = "";
      preview.innerHTML = "";
    }
  </script>
</body>
</html>
